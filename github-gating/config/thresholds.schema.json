{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "snyk": {
      "type": "object",
      "properties": {
        "critical": { "type": "integer", "minimum": 0, "maximum": 0 },
        "high": { "type": "integer", "minimum": 0, "maximum": 5 },
        "medium": { "type": "integer", "minimum": 0, "maximum": 20 }
      }
    },
    "sonarqube": {
      "type": "object",
      "properties": {
        "coverage": { "type": "integer", "minimum": 80, "maximum": 100 },
        "bugs": { "type": "integer", "minimum": 0, "maximum": 5 },
        "vulnerabilities": { "type": "integer", "minimum": 0 },
        "code_smells": { "type": "integer", "minimum": 0, "maximum": 50 },
        "security_rating": { "type": "string", "enum": ["A", "B"] },
        "reliability_rating": { "type": "string", "enum": ["A", "B"] },
        "maintainability_rating": { "type": "string", "enum": ["A", "B", "C"] }
      }
    }
  }
}